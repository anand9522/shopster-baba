<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.think.shopster.MainActivity">

    <Button
        android:id="@+id/sign_out_button"
        android:layout_width="112dp"
        android:layout_height="59dp"
        android:text="Sign Out"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/sign_in_button"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/revoke_access_button"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/revoke_access_button" />

    <Button
        android:id="@+id/revoke_access_button"
        android:layout_width="111dp"
        android:layout_height="55dp"
        android:text="Revoke Access"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/sign_out_button"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginRight="110dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.832" />

    <EditText
        android:id="@+id/statuslabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/sign_in_button"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/sign_in_button"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="230dp"
        android:layout_height="60dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        android:text="Sign In"
        app:layout_constraintLeft_toLeftOf="@+id/sign_out_button"
        app:layout_constraintRight_toRightOf="@+id/sign_out_button"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="96dp" />
</android.support.constraint.ConstraintLayout>
